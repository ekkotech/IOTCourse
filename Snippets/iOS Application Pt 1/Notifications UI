/*** Snippets for iOS Application Part 1, Notifications UI ***/

/*** Notifications_UI_Snip_1 ***/

// Left button
nc.addObserver(forName: .entityLeftButton,
               object: nil,
               queue: OperationQueue.main,
               using: { notification in
                if let payload = notification.object as? BinaryPayload {
                    self.leftSwitch.isOn = payload.value
                }
})
// Right button
nc.addObserver(forName: .entityRightButton,
               object: nil,
               queue: OperationQueue.main,
               using: { notification in
                if let payload = notification.object as? BinaryPayload {
                    self.rightSwitch.isOn = payload.value
                }
})

/*** End ***/

/*** Notifications_UI_Snip_2 ***/

case .ready:
    self.leftButton.setNotify(state: true)

/*** End ***/
